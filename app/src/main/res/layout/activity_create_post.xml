<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createPost">

  <!-- res/layout/activity_create_post.xml -->
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="16dp">

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter title"
        android:layout_below="@id/titleLabel"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/categoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="18sp"
        android:layout_below="@id/editTextTitle"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryLabel"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextOtherCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Other"
        android:layout_below="@id/categorySpinner"
        android:layout_marginTop="8dp"
        android:visibility="gone"/> <!-- Initially set to gone -->

    <TextView
        android:id="@+id/descriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="18sp"
        android:layout_below="@id/editTextOtherCategory"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter description"
        android:layout_below="@id/descriptionLabel"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/contactLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferred Method of Contact"
        android:textSize="18sp"
        android:layout_below="@id/editTextDescription"
        android:layout_marginTop="16dp"/>

    <RadioGroup
        android:id="@+id/radioGroupContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/contactLabel"
        android:layout_marginTop="8dp">

      <RadioButton
          android:id="@+id/radioEmail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Email"/>

      <RadioButton
          android:id="@+id/radioPhone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Phone"/>

      <RadioButton
          android:id="@+id/radioBoth"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Both"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post"
        android:layout_below="@id/radioGroupContact"
        android:layout_marginTop="16dp"/>
  </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

